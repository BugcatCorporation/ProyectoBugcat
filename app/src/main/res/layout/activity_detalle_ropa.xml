<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/img_imagen_ropa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/default_image"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/txt_nombre_ropa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del Producto"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_below="@id/img_imagen_ropa"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/txt_precio_ropa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio: S/. 0.00"
        android:textSize="18sp"
        android:layout_below="@id/txt_nombre_ropa"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/txt_descripcion_ropa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripción del producto. Esta es una descripción larga que puede ocupar varias líneas."
        android:textSize="16sp"
        android:layout_below="@id/txt_precio_ropa"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_agregar_carrito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar al Carrito"

        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_below="@id/txt_descripcion_ropa"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/btn_volver_carrito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volver al Catálogo"

        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_below="@id/btn_agregar_carrito"
        android:layout_marginTop="16dp" />

</RelativeLayout>