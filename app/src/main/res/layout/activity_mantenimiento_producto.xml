<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MantenimientoProducto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="15mm"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_height="15mm"
                android:src="@drawable/bugcat4"
                android:layout_gravity="center">

            </pl.droidsonroids.gif.GifImageView>

            <TextView
                android:id="@+id/mant_txtusuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bienvenido Usuario" />

            <Button
                android:id="@+id/mantp_btnCerrarSesion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="10dp"
                android:text="Cerrar sesion" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="25dp"
                android:gravity="center"
                android:textColor="@color/material_dynamic_primary70"
                android:text="CAPOO BUGCAT " />
            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="15dp"
                android:gravity="center"
                android:text="MANTENIMIENTO PRODUCTOS" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/mantp_btnRegistrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Registrar un producto">
        </Button>
        <Button
            android:id="@+id/List_btnAtras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Atras">
        </Button>

    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mant_rvListProductos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>